/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public void f(TreeNode root, List<TreeNode> l){
        if(root == null){
            return;
        }
        l.add(root);
        f(root.left, l);
        f(root.right, l);
    }
    public void flatten(TreeNode root) {
       if(root == null){
        return;
       }
       if(root.left==null && root.right == null){
        return;
       }
       List<TreeNode> l = new ArrayList<>();
       f(root, l);
       for(int i=0;i<l.size();i++){
        root.right = l.get(i);
        root.left = null;
        root = root.right;
       }
    }
}
