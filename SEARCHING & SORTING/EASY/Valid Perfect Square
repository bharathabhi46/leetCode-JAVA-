class Solution {
    public boolean f(int n, int num){
        int l = 1;
        int h = n;
        while(l<=h){
            int m = (l+h)/2;
            if(m*m == num){
                return true;
            }else if(m*m < num){
                l=m+1;
            }else{
                h=m-1;
            }
        }
        return false;
    }
    public boolean isPerfectSquare(int num) {
        int n = (int)Math.sqrt(num);
        return f(n, num);
    }
}
