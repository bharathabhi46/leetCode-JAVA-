class Solution {
    class Node {
        char data;
        Node next;

        Node(char data) {
            this.data = data;
            this.next = null;
        }
    }

    class Stack {
        Node head = null;
        public boolean isEmpty() {
            return head == null;
        }

        public void add(char data) {
            Node newNode = new Node(data);
            if (isEmpty()) {
                head = newNode;
                return;
            }
            newNode.next = head;
            head = newNode;
        }

        public char remove() {
            if (isEmpty()) {
                return '\0';
            }
            char top = head.data;
            head = head.next;
            return top;
        }

        public char peek() {
            if (isEmpty()) {
                return '\0';
            }
            return head.data;
        }
    }

    public boolean isValid(String s) {
        Stack sta = new Stack();
        for (char ch : s.toCharArray()) {
            if (ch == '(' || ch == '{' || ch == '[') {
                sta.add(ch);
            } else {
                if (sta.isEmpty()) {
                    return false;
                }
                char top = sta.remove();
                if (ch == ')' && top != '(' || ch == '}' && top != '{' || ch == ']' && top != '[') {
                    return false;
                }
            }
        }
        return sta.isEmpty();
    }
}
